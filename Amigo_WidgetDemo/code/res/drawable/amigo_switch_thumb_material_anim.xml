<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:constantSize="true">
    <item android:state_enabled="false" android:id="@+id/off">
        <bitmap
            android:src="@drawable/amigo_switch_thumb"
            android:gravity="center"
            android:tintMode="multiply"/>
    </item>
    <item
        android:state_checked="true"
        android:id="@+id/on">
        <bitmap
            android:src="@drawable/amigo_switch_thumb"
            android:gravity="center"
            android:tintMode="multiply" />
    </item>
    <item android:id="@+id/off">
        <bitmap
            android:src="@drawable/amigo_switch_thumb"
            android:gravity="center"
            android:tintMode="multiply" />
    </item>
    <transition
        android:fromId="@+id/off"
        android:toId="@+id/on">
        <animation-list>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_thumb" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_on_00002" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_on_00003" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_on_00004" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_on_00005" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_on_00006" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_on_00007" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_on_00008" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_on_00009" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_thumb" android:gravity="center" android:tintMode="multiply" />
            </item>
        </animation-list>
    </transition>
    <transition android:fromId="@+id/on" android:toId="@+id/off">
        <animation-list>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_thumb" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_off_00002" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_off_00003" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_off_00004" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_off_00005" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_off_00006" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_off_00007" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_off_00008" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_off_00009" android:gravity="center" android:tintMode="multiply" />
            </item>
            <item android:duration="10">
                <bitmap android:src="@drawable/amigo_switch_thumb" android:gravity="center" android:tintMode="multiply" />
            </item>
        </animation-list>
    </transition>
</animated-selector>
