<!-- Used as the canonical button shape. -->

<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetBottom="@dimen/amigo_category_btn_inset"
    android:insetLeft="@dimen/amigo_category_btn_inset"
    android:insetRight="@dimen/amigo_category_btn_inset"
    android:insetTop="@dimen/amigo_category_btn_inset" >

    <shape android:shape="rectangle" >
        <corners android:radius="@dimen/amigo_category_btn_radius" />

        <solid android:color="@color/amigo_category_btn_bg_color" />

        <stroke
            android:width="@dimen/amigo_button_stroke_width"
            android:color="@color/amigo_magicbar_tab_divider" />

        <padding
            android:left="@dimen/amigo_category_btn_radius"
            android:right="@dimen/amigo_category_btn_radius" />
    </shape>

</inset>