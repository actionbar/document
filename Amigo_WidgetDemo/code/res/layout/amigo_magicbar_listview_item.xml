<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="@dimen/amigo_magicbar_list_item_height"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="24dip"
        android:paddingStart="24dip" >

        <amigoui.widget.AmigoTextView
            android:id="@+id/amigo_magic_listitem_textview"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/amigo_magicbar_list_text_size"
            android:textColor="@color/amigo_action_menu_listview_text" />

        <amigoui.widget.AmigoCheckBox
            android:id="@+id/amigo_magic_listitem_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/amigo_divider_height"
        android:layout_gravity="bottom"
        android:background="@color/amigo_list_divider_color" />

</LinearLayout>