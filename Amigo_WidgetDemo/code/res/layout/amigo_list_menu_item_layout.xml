<?xml version="1.0" encoding="utf-8"?>
<com.amigoui.internal.view.menu.AmigoListMenuItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/amigo_AlertDialogListItemHeight"
    android:orientation="vertical" >

    <!-- Icon will be inserted here. -->


    <!-- The title and summary have some gap between them, and this 'group' should be centered vertically. -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="?attr/amigolistPreferredItemPaddingEnd"
        android:layout_marginStart="?attr/amigolistPreferredItemPaddingStart"
        android:layout_weight="1"
        android:duplicateParentState="true"
        android:gravity="center_vertical" >

        <amigoui.widget.AmigoTextView
            android:id="@+id/amigo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:duplicateParentState="true"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="?attr/amigo_dialog_content_text_color" />

        <amigoui.widget.AmigoTextView
            android:id="@+id/amigo_shortcut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/amigo_title"
            android:duplicateParentState="true"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?attr/amigo_dialog_content_text_color" />
    </RelativeLayout>

    <!-- Checkbox, and/or radio button will be inserted here. -->

</com.amigoui.internal.view.menu.AmigoListMenuItemView>
