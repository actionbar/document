<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/amigo_AlertDialogListItemHeight"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:orientation="vertical"
    android:paddingStart="@dimen/amigo_alert_dialog_title_margin_left" >

    <amigoui.widget.AmigoCheckedTextView
        android:id="@id/amigo_text1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/amigo_list_item_tailicon_margin_right"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="?attr/amigo_dialog_content_text_color"
        android:textSize="@dimen/amigo_textSizeAlertDialogListItem" />

</LinearLayout>