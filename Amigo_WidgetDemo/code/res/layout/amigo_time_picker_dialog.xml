<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingBottom="8dp"
    android:gravity="center"
    android:orientation="vertical" >

    <amigoui.widget.AmigoTextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp" 
        android:textColor="@color/amigo_content_color_primary_on_backgroud_c1"
        android:text="@string/amigo_time_picker_dialog_title"/>

    <amigoui.widget.AmigoTimePicker
        android:id="@+id/amigo_timePicker"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

</LinearLayout>