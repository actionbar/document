<?xml version="1.0" encoding="utf-8"?>

<!--
    This layout file is used by the AlertDialog when displaying a list of items.
    This layout file is inflated and used as the ListView to display the items.
    Assign an ID so its state will be saved/restored.
-->
<!-- android:id="@+android:id/select_dialog_listview" -->
<view class="com.amigoui.internal.app.AmigoAlertController$RecycleListView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:amigo="http://schemas.android.com/apk/res-auto"
    android:id="@+id/amigo_dialog_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:cacheColorHint="@null"
    amigo:amigo_list_divider_padding_start="@dimen/amigo_alert_dialog_title_margin_left"
    android:scrollbars="vertical"
    android:overScrollMode="ifContentScrolls" />
