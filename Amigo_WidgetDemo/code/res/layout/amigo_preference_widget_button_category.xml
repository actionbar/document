<?xml version="1.0" encoding="utf-8"?>

<!--
     Layout used by CheckBoxPreference for the checkbox style. This is inflated
     inside android.R.layout.amigo_preference.
-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/amigo_category_btn_container"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/amigo_category_btn_container_height"
    android:gravity="end|center_vertical"
    android:minWidth="@dimen/amigo_category_btn_container_widith" >

    <amigoui.widget.AmigoButton
        android:id="@+id/amigo_category_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/amigo_category_btn_height"
        android:background="@drawable/amigo_category_btn_mtrl_shape"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:clickable="false"
        android:minWidth="@dimen/amigo_category_btn_widith"
        android:textColor="@color/amigo_category_btn_text_color"
        android:textSize="@dimen/amigo_category_btn_text_size" />

</RelativeLayout>