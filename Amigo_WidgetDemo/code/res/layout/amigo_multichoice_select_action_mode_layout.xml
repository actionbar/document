<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <amigoui.widget.AmigoTextView
        android:id="@+id/amigo_multichoice_selectedCount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/amigo_multichoice_select_text"
        android:textColor="@color/amigo_actionbar_title_color_dark"
        android:textSize="@dimen/amigo_action_bar_title_text_size" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end" >

        <amigoui.widget.AmigoButton
            android:id="@+id/amigo_multichoice_selectall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:ellipsize="marquee"
            android:minWidth="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:text="@string/amigo_multichoice_select_all"
            android:textColor="@color/amigo_actionbar_title_color_dark"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>