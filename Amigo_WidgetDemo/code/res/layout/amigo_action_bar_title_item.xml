<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:enabled="false"
    android:orientation="horizontal"
    android:paddingEnd="20dip" >

    <ImageView
        android:id="@+id/amigo_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:background="?android:attr/actionBarItemBackground"
        android:src="?android:attr/homeAsUpIndicator"
        android:visibility="gone" />

    <View
        android:id="@+id/amigo_empty_view"
        android:layout_width="16dip"
        android:layout_height="match_parent"
        android:background="@null"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:orientation="vertical"
        android:paddingStart="@dimen/amigo_list_item_margin_left" >

        <amigoui.widget.AmigoTextView
            android:id="@+id/amigo_action_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true" />

        <amigoui.widget.AmigoTextView
            android:id="@+id/amigo_action_bar_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/amigo_action_bar_subtitle_top_margin"
            android:ellipsize="end"
            android:singleLine="true"
            android:visibility="gone" />
        <!--
             android:layout_marginTop="@dimen/amigo_action_bar_subtitle_top_margin"
                  android:layout_marginBottom="@dimen/amigo_action_bar_subtitle_bottom_margin"
        -->
    </LinearLayout>
</LinearLayout>
