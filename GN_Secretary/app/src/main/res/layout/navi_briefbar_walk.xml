<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_brief_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/navi_select_route_brief_walk_time_textsize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_brief_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_brief_time"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@id/tv_brief_time"
        android:textSize="@dimen/navi_select_route_brief_walk_distance_textsize" />

    <TextView
        android:id="@+id/tv_brief_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_brief_time"
        android:layout_below="@id/tv_brief_time"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/navi_select_route_brief_walk_description_textsize"
        android:visibility="gone" />

</RelativeLayout>