<?xml version="1.0" encoding="utf-8"?>
<amigoui.preference.AmigoPreferenceScreen
    xmlns:amigo="http://schemas.android.com/apk/res-auto"
    amigo:amigokey="parent"
    amigo:amigotitle="@string/settings">

    <amigoui.preference.AmigoPreferenceCategory
        amigo:amigokey="preferences_login_category"
        amigo:amigotitle="@string/login">
        <amigoui.preference.AmigoPreferenceScreen
            amigo:amigoicon="@drawable/user_icon"
            amigo:amigokey="preferences_login"
            amigo:amigosummary="@string/login_tips"
            amigo:amigotitle="@string/login">

        </amigoui.preference.AmigoPreferenceScreen>
    </amigoui.preference.AmigoPreferenceCategory>

    <amigoui.preference.AmigoPreferenceCategory
        amigo:amigokey="preferences_travel_method"
        amigo:amigotitle="@string/travel_method_setting">
        <amigoui.preference.AmigoListPreference
            amigo:amigodefaultValue="@string/travel_default_method_value"
            amigo:amigodialogTitle="@string/travel_method"
            amigo:amigoentries="@array/travel_method_entry"
            amigo:amigoentryValues="@array/travel_method_value"
            amigo:amigokey="preference_default_travel_method"
            amigo:amigosummary="@string/travel_method_drive"
            amigo:amigotitle="@string/default_travel_method" />

    </amigoui.preference.AmigoPreferenceCategory>

