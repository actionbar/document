    <amigoui.preference.AmigoPreferenceCategory
        amigo:amigokey="preferences_remind_setting"
        amigo:amigotitle="@string/remind_setting">

        <amigoui.preference.AmigoSwitchPreference
            amigo:amigodefaultValue="true"
            amigo:amigokey="preference_events_remind_enable"
            amigo:amigopersistent="true"
            amigo:amigosummary="@string/intelligent_remind_summary"
            amigo:amigotitle="@string/remind_setting" />

        <amigoui.preference.AmigoPreferenceScreen
            amigo:amigokey="preferences_modify_ring"
            amigo:amigosummary="@string/default_ring"
            amigo:amigotitle="@string/notification_ring">

        </amigoui.preference.AmigoPreferenceScreen>

    </amigoui.preference.AmigoPreferenceCategory>

    <amigoui.preference.AmigoPreferenceCategory
        amigo:amigokey="preferences_func_setting"
        amigo:amigotitle="@string/function_setting">
        <amigoui.preference.AmigoSwitchPreference
            amigo:amigodefaultValue="true"
            amigo:amigokey="preference_show_express_status"
            amigo:amigopersistent="true"
            amigo:amigosummary="@string/express_status_summary"
            amigo:amigotitle="@string/display_express_status" />

    </amigoui.preference.AmigoPreferenceCategory>

    <amigoui.preference.AmigoPreferenceCategory
        amigo:amigokey="preferences_func_setting"
        amigo:amigotitle="@string/protect">
        <amigoui.preference.AmigoSwitchPreference
            amigo:amigodefaultValue="false"
            amigo:amigokey="preference_private_protect"
            amigo:amigopersistent="true"
            amigo:amigotitle="@string/pass_protect" />
        <amigoui.preference.AmigoSwitchPreference
            amigo:amigodefaultValue="true"
            amigo:amigokey="preference_show_widget"
            amigo:amigopersistent="true"
            amigo:amigotitle="@string/widget_show_schedule" />

    </amigoui.preference.AmigoPreferenceCategory>

</amigoui.preference.AmigoPreferenceScreen>

