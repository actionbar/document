<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalendarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/SlideTransitionStyle</item>
        <item name="android:statusBarColor">#efefef</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AmigoActivityTheme" parent="@style/Theme.Amigo.Light">
    </style>

    <style name="CheckboxStyle" parent="@android:style/Widget.Holo.Light.CompoundButton.CheckBox">
        <item name="android:button">@drawable/amigo_btn_check_light</item>
    </style>

    <style name="CardDetailActivityTheme" parent="AmigoActivityTheme">
        <item name="colorPrimary">@color/card_detail_activity_actionbar_color</item>
        <item name="colorPrimaryDark">@color/card_detail_activity_actionbar_color</item>
    </style>

    <style name="CardTheme">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">0.6dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="contentPaddingBottom">10dp</item>
        <item name="contentPaddingTop">10dp</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="DetailCardTheme">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">0.6dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="contentPaddingTop">0dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <!-- GiONEE yanjc <20160604> add, begin -->
    <style name="MediaButton" parent="@android:style/MediaButton">
        <item name="android:background">@android:drawable/btn_default</item>
    </style>
    <!-- GiONEE yanjc <20160604> add, end -->

    <style name="Gn_ActionBar_Button_Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:textColor">#99000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>


  <!-- <style name="LaunchTheme" parent="@amigo:style/Theme.Amigo.Light">
        <item name="android:windowBackground">@drawable/start_page</item>
        <item name="android:windowNoTitle">true</item>
        <item name="amigo:amigoactionBarStyle">@style/MainActionBarStyle</item>
    </style>-->
    <style name="LaunchTheme" parent="@style/Theme.Amigo.Light">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">false</item>

    </style>

    <style name="NavigationTheme" parent="@style/Theme.Amigo.Light">
        <item name="colorPrimary">@color/actionbar_color</item>
        <item name="colorPrimaryDark">@color/actionbar_color</item>
        <item name="android:windowAnimationStyle">@style/SlideTransitionStyle</item>
        <item name="android:statusBarColor">#efefef</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="LightActionBarStyle" parent="@style/Widget.Amigo.Light.ActionBar.Solid">

    </style>

    <style name="MainActionBarStyle" parent="@style/Widget.Amigo.Light.ActionBar.Solid">

    </style>

    <style name="SlideTransitionStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>
    </style>


</resources>
